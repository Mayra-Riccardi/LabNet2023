@model List<Practica5.MVC.Models.ApiUserView>


@{
    ViewBag.Title = "Index";
}

<h1 style="margin-bottom: 35px; margin-top: 35px; text-align:center;">Listado de Usuarios de la Api JSONPlaceholder</h1>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card">
                    <div class="card-body card text-white bg-dark mb-3">
                        <h5 class="card-title mb-4">@user.Name</h5>
                        <p class="card-text mb-4">Username: @user.Username</p>
                        <p class="card-text mb-4">Email: @user.Email</p>
                        <p class="card-text mb-4">Phone: @user.Phone</p>
                    </div>
                </div>
            </div>
        </div>
     }
</div>
       